<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_edit_username"
            android:layout_width="106dp"
            android:layout_height="37dp"
            android:text="Username: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/text_edit_username">

            <requestFocus />
        </EditText>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_edit_password"
            android:layout_width="106dp"
            android:layout_height="37dp"
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_edit_password"
            android:inputType="textPassword" />

    </RelativeLayout>

    <CheckBox
        android:id="@+id/cb_show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:checked="false"
        android:onClick="show_password"
        android:text="show password"
        android:textSize="15dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_select_auth_type"
            android:layout_width="106dp"
            android:layout_height="37dp"
            android:text="Auth Type: "
            android:textSize="20dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_auth_type"
            android:layout_toRightOf="@+id/text_select_auth_type" />

    </RelativeLayout>

